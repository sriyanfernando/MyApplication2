<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.android.datafrominternet">

    <!-- Add internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic"
        android:label="CareTaker"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.datafrominternet.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.android.datafrominternet.MainActivity"/>

        <activity android:name="com.example.android.datafrominternet.ContactActivity"/>
        <activity android:name="com.example.android.datafrominternet.OutputActivity" />
        <activity android:name="com.example.android.datafrominternet.MeetActivity"/>
        <activity android:name="com.example.android.datafrominternet.CheckScaleActivity"/>

    </application>

</manifest>